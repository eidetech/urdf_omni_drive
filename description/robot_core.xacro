<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="inertial_macros.xacro"/>

<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<!-- BASE LINK -->
<link name="base_link">

</link>

<!-- CHASSIS -->
<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0"/>
</joint>

<link name="chassis">
    <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://urdf_omni_drive/description/meshes/frame.STL" scale="0.001 0.001 0.001"/> -->
        <box size="0.7 0.3 0.15"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <!-- <mesh filename="package://urdf_omni_drive/description/meshes/frame.STL" scale="0.001 0.001 0.001"/> -->
          <box size="0.7 0.3 0.15"/>
        </geometry>
      </collision>

      <xacro:inertial_box mass="5" x="0.7" y="0.3" z="0.15">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_box>
  </link>

  <gazebo reference="chassis">
      <material>Gazebo/SkyBlue</material>
  </gazebo>

<!-- LEFT WHEEL FRONT -->
<joint name="left_wheel_front_joint" type="continuous">
  <parent link="chassis"/>
  <child link="left_wheel_front"/>
  <origin xyz="0.25 0.175 -0.075" rpy="-${pi/2} 0 0"/>
  <axis xyz="0 0 1"/>
</joint>

<link name="left_wheel_front">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://urdf_omni_drive/description/meshes/wheel.STL"/> -->
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://urdf_omni_drive/description/meshes/wheel.STL"/> -->
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
  </collision>

  <xacro:inertial_cylinder mass="1" radius="0.08" length="0.05">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder> 
</link>

<gazebo reference="left_wheel_front">
  <material>Gazebo/DarkGrey</material>
</gazebo>

<!-- LEFT WHEEL BACK -->
<joint name="left_wheel_back_joint" type="continuous">
  <parent link="chassis"/>
  <child link="left_wheel_back"/>
  <origin xyz="-0.25 0.175 -0.075" rpy="-${pi/2} 0 0"/>
