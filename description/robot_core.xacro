<link name="right_wheel_back">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://urdf_omni_drive/description/meshes/wheel.STL"/> -->
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://urdf_omni_drive/description/meshes/wheel.STL"/> -->
